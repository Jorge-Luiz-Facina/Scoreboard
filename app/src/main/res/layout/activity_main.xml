<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.MainActivity">


    <EditText
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:inputType="textPersonName"
            android:textSize="10dp"
            android:textAlignment="center"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Team 1"
            android:ems="10"
            android:id="@+id/editTextTeam1"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorLink="@color/white"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.039"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:inputType="textPersonName"
            android:textSize="10dp"
            android:textAlignment="center"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Team 2"
            android:ems="10"
            android:id="@+id/editTextTeam2"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorLink="@color/white"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="10dp"/>
    <TextView
            android:text="0"
            android:layout_width="160dp"
            android:layout_height="85dp"
            android:background="@color/colorTransparent"
            android:textColor="@color/white"
            android:textSize="90dp"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:id="@+id/textViewScoreTeam1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTeam1"/>

    <TextView
            android:text="0"
            android:layout_width="160dp"
            android:layout_height="85dp"
            android:background="@color/colorTransparent"
            android:textColor="@color/white"
            android:textSize="90dp"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:id="@+id/textViewScoreTeam2"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTeam2"/>

    <TextView
            android:text="0"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:background="@color/colorTransparent"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:id="@+id/textViewVictoryTeam1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textViewScoreTeam1"/>


    <TextView
            android:text="0"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:background="@color/colorTransparent"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:id="@+id/textViewVictoryTeam2"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textViewScoreTeam2"
            android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="Ã—"
            android:layout_width="72dp"
            android:layout_height="85dp"
            android:background="@color/colorTransparent"
            android:textColor="@color/white"
            android:textSize="90dp"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:id="@+id/textViewVersus"
            app:layout_constraintTop_toBottomOf="@+id/editTextTeam1"
            app:layout_constraintEnd_toStartOf="@+id/textViewScoreTeam2"
            app:layout_constraintStart_toEndOf="@+id/textViewScoreTeam1"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="Victories"
            android:layout_width="72dp"
            android:layout_height="20dp"
            android:background="@color/colorTransparent"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:id="@+id/textViewVictory"
            app:layout_constraintTop_toBottomOf="@+id/textViewVersus" android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/textViewVictoryTeam1" android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewVictoryTeam2" app:layout_constraintHorizontal_bias="0.0"/>


    <Button
            android:text="-1"
            android:layout_width="108dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:id="@+id/buttonTeam1Minus1"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="+3"
            android:layout_width="108dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/buttonTeam1More3"
            android:layout_marginBottom="2dp" app:layout_constraintBottom_toTopOf="@+id/buttonTeam1Minus1"/>

    <Button
            android:text="+1"
            android:layout_width="108dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/buttonTeam1More1"
            app:layout_constraintBottom_toTopOf="@+id/buttonTeam1More3" android:layout_marginBottom="2dp"/>

    <Button
            android:text="-1"
            android:layout_width="108dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:id="@+id/buttonTeam2Minus1"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="+3"
            android:layout_width="108dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:id="@+id/buttonTeam2More3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonTeam2Minus1"/>

    <Button
            android:text="+1"
            android:layout_width="108dp"
            android:layout_height="74dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:id="@+id/buttonTeam2More1"
            app:layout_constraintBottom_toTopOf="@+id/buttonTeam2More3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="2dp"/>

    <ImageView
            android:layout_width="280px"
            android:layout_height="380px" app:srcCompat="@drawable/cardjoker"
            android:id="@+id/imageViewCard"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="74dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewVictory"
            android:layout_marginTop="52dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="74dp"/>

    <TextView
            android:text=""
            android:layout_width="153dp"
            android:layout_height="22dp"
            android:background="@color/colorTransparent"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:id="@+id/textViewTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCard" android:layout_marginTop="100dp"/>


</android.support.constraint.ConstraintLayout>